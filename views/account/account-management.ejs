<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <div class="background"></div>
  <div id="wrapper">
    <%- include('../partials/header') %>
    <%- include('../partials/navigation') %>

    <main class="account-container">
      <h1><%= title %></h1>

      <% if (typeof message !== 'undefined' && message.length > 0) { %>
        <div class="flash-message"><%= message %></div>
      <% } %>

      <% if (errors && errors.length > 0) { %>
        <div class="error-list">
          <ul class="notice">
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <!-- Personalized greeting -->
      <h2>Welcome <%= account.account_firstname %></h2>

      <!-- Update account link (always visible) -->
      <p>
        <a href="/account/update/<%= account.account_id %>">Update Account Information</a>
      </p>

      <!-- Conditional: Inventory Management for Employee/Admin only -->
      <% if (account.account_type === "Employee" || account.account_type === "Admin") { %>
        <h3>Inventory Management</h3>
        <p>
          <a href="/inv">Manage Inventory</a>
        </p>
      <% } %>
    </main>

    <%- include('../partials/footer') %>
  </div>
</body>
</html>
